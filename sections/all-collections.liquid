<section class="all-collections">
    <h1>Featured Collections</h1>
    <div class="collection-container">
        <div class="all-collections-wrapper">
            {% for collection in collections %} 
                <div class="collection-card">
                    <img width="300" height="200" src="{{ collection.featured_image |  image_url  }}" />
                    <h3>{{ collection.title |  link_to: collection.url }}</h3>
                </div>
            {% endfor %}
         </div>
    </div>
</section>

<style>
    .all-collections {
        background: {{ section.settings.background }};
        color: {{ section.settings.text_color }};
        padding: 10px;
    }

    .collection-container {
        position: relative;
        overflow-x: scroll;
    }

    .collection-card {
        padding: 5px;
        box-sizing: border-box;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
    }
    
    .collection-card h3 a {
        color: black;
        text-decoration: none;
    }

    .collection-card a:hover {
        text-decoration: underline;
    }

    .all-collections-wrapper {
        display: flex;
        transition: transform 0.3s ease;
    }
</style>

{% schema %}
{
    "name": "all-collections",
    "settings": [
        {
            "type": "color",
            "id": "background",
            "label": "Background",
            "default": "#F4F4F4"
        },
        {
            "type": "color",
            "id": "text_color",
            "label": "Text",
            "default": "#000"
        }
    ],
    "presets": [
        {
            "name": "all-collections"
        }
    ]
}
{% endschema %}